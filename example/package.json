{
  "name": "blum-example",
  "version": "0.3.0",
  "description": "A simple example using Blum with Hapi & Rejoice",
  "main": "index",
  "engines": {
    "node": ">=0.10.30"
  },
  "dependencies": {
    "blum": "latest",
    "hapi": "latest",
    "jade": "latest",
    "rejoice": "latest",
    "vision": "latest"
  },
  "scripts": {
    "prestart": "blum -c criteria.js -m manifest.js",
    "start": "rejoice -c manifest.config.json -p myplugins"
  }
}
